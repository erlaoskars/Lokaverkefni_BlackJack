private void fLokaverkefni_Load(object sender, EventArgs e)
        {
            icon = random.Next(1, 5);

            if (icon == 1)
            {
                tbLykilord.PasswordChar = '♠';
            }
            if (icon == 2)
            {
                tbLykilord.PasswordChar = '♥';
            }
            if (icon == 3)
            {
                tbLykilord.PasswordChar = '♦';
            }
            if (icon == 4)
            {
                tbLykilord.PasswordChar = '♣';
            }
        
            tbLykilord.MaxLength = 15;
            }
            
           <--- Random icons, seinna verður random í hverju keypressi --->
